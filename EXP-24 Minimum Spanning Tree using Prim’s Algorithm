#include <stdio.h>
#define INF 999

void prims(int a[5][5], int n)
{
    int selected[5] = {0}, edges = 0;
    selected[0] = 1;
    while (edges < n - 1)
    {
        int min = INF, x = 0, y = 0;
        for (int i = 0; i < n; i++)
        {
            if (selected[i])
            {
                for (int j = 0; j < n; j++)
                {
                    if (!selected[j] && a[i][j] < min)
                    {
                        min = a[i][j];
                        x = i;
                        y = j;
                    }
                }
            }
        }
        printf("%d - %d : %d\n", x, y, a[x][y]);
        selected[y] = 1;
        edges++;
    }
}

void main()
{
    int a[5][5] = {
        {0, 2, INF, 6, INF},
        {2, 0, 3, 8, 5},
        {INF, 3, 0, INF, 7},
        {6, 8, INF, 0, 9},
        {INF, 5, 7, 9, 0}};
    prims(a, 5);
}
